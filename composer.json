{
    "name": "carstingaxion/query-groupedby-taxonomy",
    "description": "xtends the core Query Loop block with a 'Group by Taxonomy' option, enabling grouped front-end output by any selected taxonomy.",
    "license": "GPL-2.0-or-later",
    "type": "wordpress-plugin",
    "keywords": [
        "wordpress",
        "wordpress-plugin"
    ],
    "authors": [
        {
            "name": "figuren.theater",
            "email": "info@figuren.theater"
        },
        {
            "name": "Carsten Bach",
            "email": "mail@carsten-bach.de",
            "homepage": "https://carsten-bach.de",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/carstingaxion/query-groupedby-taxonomy",
    "support": {
        "email": "info@figuren.theater",
        "issues": "https://github.com/carstingaxion/query-groupedby-taxonomy/issues",
        "source": "https://github.com/carstingaxion/query-groupedby-taxonomy"
    },
    "require-dev": {
        "figuren-theater/code-quality": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "figuren-theater/altis-core": true,
            "figuren-theater/ft-core": true,
            "koodimonni/composer-dropin-installer": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "altis": {
            "install-overrides": []
        }
    }
}